<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" android:background="#F5F5F5"
    android:screenOrientation="landscape">

	 <TableLayout
	     android:id="@+id/tableLayout0"
	     android:layout_width="fill_parent"
	     android:layout_height="wrap_content"
	     android:layout_alignParentRight="true"
	     android:layout_marginLeft="600dp"
	     android:layout_marginRight="20dp"
	     android:layout_marginTop="100dp" >

    <TextView
        android:id="@+id/tarefas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Que hiciste ayer?"
        android:textSize="43dp"
        android:textAppearance="?android:attr/textAppearanceLarge" />
    
    <TextView android:padding="50dp" />
    
    
    <TextView
        android:id="@+id/dificuldades"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Donde te quedaste bloqueado?"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="43dp" />
  
    <TextView android:padding="50dp" />
        
    <Button
        android:id="@+id/planes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="clickOpen"
        android:text="Que vas hacer hoy?"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:background="#F5F5F5"
        android:textSize="43dp" />

  </TableLayout>   

    <TextView
        android:id="@+id/tiempo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="180dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="110dp" />

</RelativeLayout>